page{
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  background-color: #F0F0F2;
}

.activeInfo-top{
  position: relative;
  height: 157px;
}

.activeInfo-top > image{
  width: 100%;
  height: 100%;
}

.activeInfo-top-content{
  position: absolute;
  top: 0;
  left: 0;
  width: 90%;
  padding: 40px 5%;
  background-color: rgba(0, 0, 0, 0.5);
  overflow: hidden;
}

.activeInfo-top-content-left{
  float: left;
  width: 135px;
  height: 77px;
}

.activeInfo-top-content-right{
  float: left;
  margin-left: 20px;
  height: 77px;
  font-size: 12px;
  color: #FFF;
}

.activeName{
  margin-top: 5px;
}

.activeCreator{
  margin-top: 10px;
}

.activeCount{
  margin-top: 5px;
}

.active-row{
  padding: 10px;
  overflow: hidden;
  background-color: #FFF;
  border-bottom: 1px solid #F0F0F2;
}

.activeInfo-bottom :last-child{
  border-bottom: 0;
}

.active-row-left{
  float: left;
  height: 1.4rem;
  line-height: 1.4rem;
  font-size: 14px;
  color: #444;
  overflow: hidden;
}

.active-row-left > image{
  float: left;
  margin-top: 3.5px;
  margin-right: 10px;
  width: 20px;
  height: 20px;
}

.active-row-left-title{
  float: left;
}

.active-row-right{
  float: right;
  height: 1.4rem;
  line-height: 1.4rem;
  font-size: 12px;
  color: #BBB;
}

.active-row-right > input{
  width: 135px;
  text-align: right;
}

.activeMemo{
  padding: 10px;
  font-size: 14px;
  color: #444;
  background-color: #FFF;
}

.activeMemo-content{
  padding: 10px;
  color: #A9A9A9;
}

.participateIn{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 44px;
  background-color: #FF9800;
  text-align: center;
  line-height: 44px;
  font-size: 14px;
  color: #FFF;
}

.resultImage{
  margin-top: 10px; 
  text-align: center;
}

.resultImage > image{
  margin: 0 auto;
  width: 30px;
  height: 30px;
}

.resultTip{
  font-size: 12px;
  color: #BBB;
}

.goHome{
  position: fixed;
  bottom: 80px;
  right: 0;
  z-index: 1;
  padding: 5px;
  background-color: rgba(0, 0, 0, 0.5);
}

.goHome > image{
  margin-left: 5px;
  width: 30px;
  height: 30px;
}

.goHome > view{
  text-align: center;
  font-size: 10px;
  color: #FFF;
}
