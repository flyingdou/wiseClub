page{
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
}

.wraper{
  width: 100%;
  height: 100%;
  font-size: 14px;
  color: #FFF;
  background-color: #F0F0F2;
}

.activeInfo{
  padding: 10px;
  overflow: hidden;
  background-color: #FFF;
}

.activeImage{
  float: left;
  width: 135px;
  height: 77px;
}

.activeInfo-content{
  float: left;
  margin-left: 20px;
}

.activeName{
  margin-top: 5px;
  color: #444;
}

.activeTarget{
  margin-top: 10px;
  font-size: 12px;
  color: #BBB;
}

.activeCreator{
  margin-top: 5px;
  font-size: 12px;
  color: #BBB;
}

.activeStartTime{
  margin-top: 10px;
  padding: 10px;
  overflow: hidden;
  background-color: #FFF;
  border-bottom: 1px solid #F0F0F2;
}

.activeStartTime-left{
  float: left;
  color: #444;
}

.activeStartTime-right{
  float: right;
  overflow: hidden;
}

.currentDate{
  float: left;
  margin-right: 5px;
  height: 20px;
  line-height: 20px;
  font-size: 12px;
  color: #BBB;
}

.more-icon{
  float: right;
  width: 20px;
  height: 20px;
}

.currentWeight{
  padding: 10px;
  background-color: #FFF;
  overflow: hidden;
}

.currentWeight-left{
  float: left;
  height: 1.4rem;
  line-height: 1.4rem;
  color: #444;
}

.currentWeight-right{
  float: right;
  color: #BBB;
  overflow: hidden;
}

.currentWeight-right-input{
  float: left;
  margin-right: 5px;
  width: 40px;
}

.currentWeight-right-input > input{
  text-align: right;
}

.currentWeight-right-text{
  float: right;
  height: 1.4rem;
  line-height: 1.4rem;
}

.amerceMoney{
  margin-top: 10px;
  padding: 10px;
  overflow: hidden;
  background-color: #FFF;
}

.amerceMoney-left{
  float: left;
  color: #444;
}

.amerceMoney-right{
  float: right;
  color: #BBB;
}

.tip{
  margin-top: 10px;
  padding: 20px;
  font-size: 12px;
  color: #BBB;
}

.goBuy{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 44px;
  background-color: #FF9800;
  text-align: center;
  line-height: 44px;
  font-size: 18px;
  color: #FFF;
}