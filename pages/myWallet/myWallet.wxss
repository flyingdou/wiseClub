page{
   width: 100%;
   height: 100%;
   background-color: white;
}

.swiper-tab{
  width: 100%;
  height: auto;
  overflow: hidden;
  border-top: 2rpx solid #f0f2f2;
  border-bottom: 2rpx solid #f0f2f2;
}

.swiper-tab-item{
    float: left;
    left: 0;
    bottom: 0;                                  
    width: 33%;
    height: auto;
    padding: 20rpx 0;
    text-align: center;
    font-size: 28rpx;
}

.active{
   color: #FA8B0C;
   border-bottom: 2rpx solid #FA8B0C;
}

.douFill{
    width: 100%;
    height: 30rpx;
    background-color: #EFEFF1;
    border-bottom: 2rpx solid #f0f2f2;
}

swiper-item{
   overflow: scroll;
}

.pre{
  width: 94%;
  margin: 0 auto;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f0f2f2;
}

.line{
   overflow: hidden;
   padding: 10rpx 0;
}

.line:first-child{
  padding: 0;
}

.line:last-child {
  padding: 0;
}     

.line3{
   padding: 10rpx 0;
   overflow: hidden;
}

.left{
    float: left;
    left: 0;
    bottom: 0;
}

.right{
   float: right;
   right: 0;
   bottom: 0;
}

.title {
   font-size: 28rpx;
   color: #5B5A5B;
}

.value{
   font-size: 28rpx;
   color: #9B949B;
}

.douFill100{
   width: 100%;
   height: 100rpx;
}


.footer{
   position: fixed;
   left: 0;
   bottom: 0;
   width: 100%;
   height: auto;
   overflow: hidden;
}

.balance{
    float: left;
    width: 50%;
    height: auto;
    background-color: #B4B4B4;
    font-size: 30rpx;
    color: white;
    padding: 20rpx 0;
    text-align: center;
}

.cash{
   float: left;
   width: 50%;
   height: auto;
   background-color: #FEA62A;
   font-size: 30rpx;
   color: white;
   padding: 20rpx 0;
   text-align: center;
}


.noDataPicDiv{
    width: 60rpx;
    height: 60rpx;
    margin: 0 auto;
    margin-top: 60%;
}

.noDataPic{
    width: 100%;
    height: 100%;
}

.noDataFont{
    font-size: 24rpx;
    text-align: center;
    color: #999999;
}