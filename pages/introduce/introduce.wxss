@import "../../wxParse/wxParse.wxss";
page{
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
}

.wraper{
  width: 100%;
  height: 100%;
  font-size: 14px;
  color: #FFF;
}

.workDate-title{
  padding: 10px;
  color: #444;
  border-bottom: 1px solid #F0F0F2;
}

.workDate-body{
  padding: 10px;
  color: #BBB;
}

.workDate-time{
  font-size: 12px;
}

.workDate-week{
  font-size: 12px;
}

.project-title{
  padding: 10px;
  color: #444;
  border-bottom: 1px solid #F0F0F2;
}

.project-item{
  padding: 10px;
  overflow: hidden;
}

.project-image{
  float: left;
}

.project-image > image{
  width: 114px;
  height: 68px;
}

.project-name{
  text-align: center;
  color: #444;
}

.project-content{
  float: right;
  width: 60%;
  color: #BBB;
  font-size: 12px;
}

.goHome{
  position: fixed;
  bottom: 80px;
  right: 0;
  z-index: 1;
  padding: 5px;
  background-color: rgba(0, 0, 0, 0.5);
}

.goHome > image{
  margin-left: 5px;
  width: 30px;
  height: 30px;
}

.goHome > view{
  text-align: center;
  font-size: 10px;
  color: #FFF;
}
