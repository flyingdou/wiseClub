page{
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
}

.body{
   width: 100%;
   height: 100%;
   background: #f2f2f2;
}

.dou-full{
    width: 100%;
    height: 30rpx;
}

.active-area{
    width: 100%;
    height: auto;
    margin-bottom: 60rpx;
}

.active-div{
    background: white;
    padding: 60rpx 0;
    width: 90%;
    margin: 0 auto;
    border-radius: 10rpx;
}

.icon-div{
   width: 98rpx;
   height: 70rpx;
   text-align: center;
   padding: 40rpx 0;
   margin: 0 auto;
}

.icon-img{
    width: 100%;
    height: 100%;
}

.active-font{
    width: 100%;
    font-size: 40rpx;
    color: black;
    text-align: center;
    padding: 20rpx 0;
}

.active-code-div{
   width: 100%;
   text-align: center;
   padding: 40rpx 0;
}

.active-code{
   width: 70%;
   border:none;
   border-bottom: 1rpx solid #e9e9e9;
   margin: 0 auto;
   text-align: center;
}

.active-code-placeholder{
   font-size: 30rpx;
   color: #8A8A8A;
   text-align: center;

}


.active-button-div{
   position: absolute;
   width: 100%;
   height: auto;
}

.active-button{
   margin: 0 auto;
   width: 90%;
   height: 44px;
   line-height: 44px;
   text-align: center;
   font-size: 42rpx;
   color: white;
   background: #FF9800;
   border-radius: 10rpx;
}
