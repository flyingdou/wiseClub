page{
  background-color: #F0F0F2;
}

.ticket-info{
  position: relative;
  padding: 40rpx;
  background-color: #FFF;
}

.ticket-background{
  width: 100%;
  height: 350rpx;
}

.ticket-warper{
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
}

.ticket-content{
  padding: 70rpx;
  color: #FFF;
}

.ticket-name{
  font-size: 34rpx;
}

.ticket-price{
  margin-top: 150rpx;
  font-size: 34rpx;
}

.ticket-other{
  margin-top: 26rpx;
  overflow: hidden;
}

.ticket-limit{
  float: left;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 26rpx;
}

.ticket-days{
  float: right;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 26rpx;
}

.receive{
  padding: 20rpx;
  overflow: hidden;
  background-color: #FFF;
  border-bottom: 1px solid #F0F0F2;
}

.member-image{
  float: left;
  width: 56rpx;
  height: 56rpx;
}

.give-info{
  float: left;
  margin-left: 20rpx;
}

.giver{
  font-size: 22rpx;
  color: #1E1E1E;
}

.collector{
  font-size: 22rpx;
  color: #999;
}

.club-list{
  background-color: #FFF;
  border-bottom: 1px solid #F0F0F2;
}

.club-list-title{
  padding: 20rpx;
  border-bottom: 1px solid #F0F0F2;
  overflow: hidden;
}

.title-name{
  float: left;
  font-size: 34rpx;
}

.title-club-count{
  float: right;
  font-size: 34rpx;
  color: #999;
}

.club-list-body{
  padding: 20rpx 40rpx;
  overflow: hidden;
}

.club-item{
  float: left;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.club-image{
  width: 197rpx;
  height: 121rpx;
}

.club-name{
  width: 100%;
  text-align: center;
  font-size: 22rpx;
  color: #999;
}

.give{
  position: fixed;
  bottom: 20rpx;
  left: 0;
  width: 100%;
  height: 88rpx;
}

.give-button{
  position: relative;
  width: 90%;
  margin: 0 auto;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  font-size: 34rpx;
  color: #FFF;
  background-color: #FF6601;
  border-radius: 10rpx;
}

.share-button{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  background-color: transparent;
}

.share-button::after{
  border: none;
}

.goHome{
  position: fixed;
  bottom: 80px;
  right: 0;
  z-index: 1;
  padding: 5px;
  background-color: rgba(0, 0, 0, 0.5);
}

.goHome > image{
  margin-left: 5px;
  width: 30px;
  height: 30px;
}

.goHome > view{
  text-align: center;
  font-size: 10px;
  color: #FFF;
}




