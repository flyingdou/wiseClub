.banner{
  height: 164px;
}

.banner > image{
  width: 100%;
  height: 100%;
}

.hongbao{
  padding: 10px;
  overflow: hidden;
}

.hongbao-left{
  float: left;
  height: 36px;
  padding-right: 10px;
}

.hongbao-left > image{
  width: 33px;
  height: 36px;
}

.hongbao-right{
  float: left;
  width: 85%;
  font-size: 12px;
  color: #444;
}

.hongbao-text-margin{
  margin-top: 4px;
}

.no-data-image{
  margin: 0 auto;
  margin-top: 20px;
  width: 30px;
  height: 30px;
}

.no-data-image > image{
  width: 100%;
  height: 100%;
}

.noDataFont{
  text-align: center;
  color: #999;
  font-size: 12px;
}

.oneCard-list{
  margin-bottom: 44px;
}

.oneCard-list :last-child{
  border: 0;
}

.oneCard-body{
  position: relative;
  padding: 10px;
  overflow: hidden;
  border-bottom: 1px solid #F0F0F2;
}

.onCard-image{
  float: left;
  width: 114px;
  height: 68px;
}

.oneCard-contant{
  float: left;
  margin-left: 10px;
  width: 63%;
}

.onCard-info{
  margin-top: 5px;
  height: 25px;
  overflow: hidden;
}

.onCard-name{
  float: left;
  color: #444;
}

.sell-out{
  float: right;
  margin-top: 2px;
  padding: 0 5px;
  color: #FF4401;
  font-size: 12px;
  border: 1px solid #FF4401;
  border-radius: 10px;
}

.onCard-price{
  margin-top: 3px;
  color: #BBB;
  font-size: 12px;
}

.onCard-remark{
  margin-top: 3px;
  width: 100%;
  overflow: hidden;
  color: #BBB;
  font-size: 11px;
}

.checkbox{
  position: absolute;
  top: 40%;
  right: 10px;
  width: 20px;
  height: 20px;
}

.share{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 44px;
  text-align: center;
  line-height: 44px;
  color: #FFF;
  background-color: #FF4401;
  overflow: hidden;
}

.share-button{
  float: left;
  width: 100%;
  height: 100%;
  color: #FFF;
  background-color: transparent;
}

.share-button::after{  
  border: none;
}